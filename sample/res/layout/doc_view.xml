<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btn_print" android:text="Печать" android:padding="12dp" android:layout_gravity="center_horizontal" android:layout_marginBottom="6dp"/>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/iv_doc" />
    </ScrollView>

</LinearLayout>
